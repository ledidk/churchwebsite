---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="404 - Page Non Trouvée | Page Not Found" lang="fr">
  <Header lang="fr" />
  
  <main>
    <section class="error-section">
      <div class="container">
        <div class="error-content">
          <h1>404</h1>
          <h2>Page Non Trouvée / Page Not Found</h2>
          <p class="error-message">
            La page que vous recherchez n'existe pas.<br>
            The page you are looking for does not exist.
          </p>
          <div class="error-actions">
            <a href="/fr" class="btn btn-primary">Retour à l'accueil / Back to Home</a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer lang="fr" />
</Layout>

<style>
  main {
    padding-top: 80px;
    min-height: 70vh;
    display: flex;
    align-items: center;
  }

  .error-section {
    width: 100%;
    padding: 80px 0;
  }

  .error-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .error-content h1 {
    font-size: 8rem;
    color: var(--primary-blue);
    margin-bottom: 24px;
    line-height: 1;
  }

  .error-content h2 {
    font-size: 2rem;
    margin-bottom: 24px;
    color: var(--neutral-800);
  }

  .error-message {
    font-size: 1.125rem;
    color: var(--neutral-600);
    margin-bottom: 48px;
    line-height: 1.8;
  }

  .error-actions {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .error-content h1 {
      font-size: 5rem;
    }

    .error-content h2 {
      font-size: 1.5rem;
    }
  }
</style>
