---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<Layout title="Ministries - Gatineau Church" lang="en">
  <Header lang="en" />
  
  <main>
    <section class="hero-small">
      <div class="container">
        <h1>Our Ministries</h1>
        <p>Programs for all ages and needs in our community</p>
      </div>
    </section>

    <section class="section">
      <div class="container">
        <div class="text-center" style="margin-bottom: 64px;">
          <h2>Age-Based Ministries</h2>
          <p>We offer programs adapted to every stage of life</p>
        </div>
        
        <div class="grid grid-2">
          <div class="card ministry-card">
            <img src="https://images.pexels.com/photos/8613089/pexels-photo-8613089.jpeg?auto=compress&cs=tinysrgb&w=800" alt="Children's ministry" style="width: 100%; height: 200px; object-fit: cover; border-radius: 8px; margin-bottom: 24px;">
            <h3>Children's Ministry (0-12 years)</h3>
            <p>Educational and fun programs to help children grow in their faith and develop strong Christian values.</p>
            
            <div class="ministry-details">
              <h4>Programs offered:</h4>
              <ul style="margin-left: 24px;">
                <li><strong>Sunday School:</strong> Age-appropriate Bible lessons</li>
                <li><strong>Adventure Club:</strong> Wednesday evening, games and teachings</li>
                <li><strong>Nursery:</strong> During services for 0-3 years</li>
                <li><strong>Summer Camp:</strong> Week of activities in July</li>
              </ul>
              
              <div class="contact-info">
                <p><strong>Leader:</strong> Sophie Martin</p>
                <p><strong>Contact:</strong> (819) 555-0134</p>
                <p><strong>Email:</strong> children@eglisegatineau.ca</p>
              </div>
            </div>
          </div>
          
          <div class="card ministry-card">
            <img src="https://images.pexels.com/photos/8613089/pexels-photo-8613089.jpeg?auto=compress&cs=tinysrgb&w=800" alt="Youth ministry" style="width: 100%; height: 200px; object-fit: cover; border-radius: 8px; margin-bottom: 24px;">
            <h3>Youth Ministry (13-18 years)</h3>
            <p>A dynamic environment where teenagers can explore their faith, develop strong friendships, and discover their identity in Christ.</p>
            
            <div class="ministry-details">
              <h4>Regular activities:</h4>
              <ul style="margin-left: 24px;">
                <li><strong>Youth Night:</strong> Friday 7:30 PM, games and teaching</li>
                <li><strong>Worship Team:</strong> Participation in services</li>
                <li><strong>Monthly Outings:</strong> Recreational activities</li>
                <li><strong>Summer Camp:</strong> Week at Camp Peniel</li>
              </ul>
              
              <div class="contact-info">
                <p><strong>Leader:</strong> Marc Leblanc</p>
                <p><strong>Contact:</strong> (819) 555-0156</p>
                <p><strong>Email:</strong> youth@eglisegatineau.ca</p>
              </div>
            </div>
          </div>
          
          <div class="card ministry-card">
            <img src="https://images.pexels.com/photos/8613089/pexels-photo-8613089.jpeg?auto=compress&cs=tinysrgb&w=800" alt="Young adults" style="width: 100%; height: 200px; object-fit: cover; border-radius: 8px; margin-bottom: 24px;">
            <h3>Young Adults (19-35 years)</h3>
            <p>Community for young adults navigating the challenges of modern life while deepening their relationship with God.</p>
            
            <div class="ministry-details">
              <h4>Meetings and activities:</h4>
              <ul style="margin-left: 24px;">
                <li><strong>Home Group:</strong> Tuesday 7:30 PM, study and sharing</li>
                <li><strong>Social Evenings:</strong> Monthly activities</li>
                <li><strong>Retreats:</strong> Refreshment weekends</li>
                <li><strong>Community Service:</strong> Local outreach projects</li>
              </ul>
              
              <div class="contact-info">
                <p><strong>Leader:</strong> Sarah Leblanc</p>
                <p><strong>Contact:</strong> (819) 555-0189</p>
                <p><strong>Email:</strong> youngadults@eglisegatineau.ca</p>
              </div>
            </div>
          </div>
          
          <div class="card ministry-card">
            <img src="https://images.pexels.com/photos/8613089/pexels-photo-8613089.jpeg?auto=compress&cs=tinysrgb&w=800" alt="Seniors ministry" style="width: 100%; height: 200px; object-fit: cover; border-radius: 8px; margin-bottom: 24px;">
            <h3>Seniors Ministry (55+ years)</h3>
            <p>Programs specially designed for our more experienced members, valuing their wisdom and contribution to the community.</p>
            
            <div class="ministry-details">
              <h4>Activities offered:</h4>
              <ul style="margin-left: 24px;">
                <li><strong>Seniors Club:</strong> Thursday 2:00 PM, social activities</li>
                <li><strong>Bible Studies:</strong> In-depth Scripture study</li>
                <li><strong>Cultural Outings:</strong> Visits and excursions</li>
                <li><strong>Visitation Ministry:</strong> Support for isolated members</li>
              </ul>
              
              <div class="contact-info">
                <p><strong>Leader:</strong> Robert Tremblay</p>
                <p><strong>Contact:</strong> (819) 555-0167</p>
                <p><strong>Email:</strong> seniors@eglisegatineau.ca</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="section section-alt">
      <div class="container">
        <div class="text-center" style="margin-bottom: 64px;">
          <h2>Specialized Ministries</h2>
          <p>Services and programs for specific needs</p>
        </div>
        
        <div class="grid grid-3">
          <div class="card">
            <h3>Family Ministry</h3>
            <p>Support and resources to strengthen families and marital relationships.</p>
            <ul style="margin-left: 24px;">
              <li>Marriage counseling</li>
              <li>Marriage preparation</li>
              <li>Parenting support groups</li>
              <li>Family mediation</li>
            </ul>
            <div class="contact-info">
              <p><strong>Contact:</strong> Pastor Marie Tremblay</p>
              <p><strong>Phone:</strong> (819) 555-0123</p>
            </div>
          </div>
          
          <div class="card">
            <h3>Prayer Ministry</h3>
            <p>Intercession and spiritual support for community and world needs.</p>
            <ul style="margin-left: 24px;">
              <li>24/7 prayer chain</li>
              <li>Prayer for the sick</li>
              <li>Intercession for missions</li>
              <li>Prayer training</li>
            </ul>
            <div class="contact-info">
              <p><strong>Contact:</strong> Marie Dubois</p>
              <p><strong>Phone:</strong> (819) 555-0145</p>
            </div>
          </div>
          
          <div class="card">
            <h3>Worship Ministry</h3>
            <p>Musical teams that lead worship during services and special events.</p>
            <ul style="margin-left: 24px;">
              <li>Traditional choir</li>
              <li>Contemporary worship team</li>
              <li>Musical training</li>
              <li>Community concerts</li>
            </ul>
            <div class="contact-info">
              <p><strong>Contact:</strong> David Rousseau</p>
              <p><strong>Phone:</strong> (819) 555-0178</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="section">
      <div class="container">
        <div class="text-center" style="margin-bottom: 64px;">
          <h2>Community Outreach Ministries</h2>
          <p>Serving our local community with love and compassion</p>
        </div>
        
        <div class="grid grid-2">
          <div class="card">
            <img src="https://images.pexels.com/photos/6994835/pexels-photo-6994835.jpeg?auto=compress&cs=tinysrgb&w=800" alt="Food bank" style="width: 100%; height: 200px; object-fit: cover; border-radius: 8px; margin-bottom: 24px;">
            <h3>Food Bank</h3>
            <p>Weekly food distribution to families in need in Gatineau and surrounding areas.</p>
            
            <div style="margin-top: 24px;">
              <h4>Services offered:</h4>
              <ul style="margin-left: 24px;">
                <li>Distribution Saturday 9:00 AM-12:00 PM</li>
                <li>Emergency food baskets available</li>
                <li>Hot meals during winter</li>
                <li>Christmas program for families</li>
              </ul>
              
              <p><strong>Volunteers needed:</strong> Sorting, packing, distribution</p>
              <p><strong>Contact:</strong> (819) 555-0123</p>
            </div>
          </div>
          
          <div class="card">
            <img src="https://images.pexels.com/photos/6994835/pexels-photo-6994835.jpeg?auto=compress&cs=tinysrgb&w=800" alt="Newcomer assistance" style="width: 100%; height: 200px; object-fit: cover; border-radius: 8px; margin-bottom: 24px;">
            <h3>Newcomer Assistance</h3>
            <p>Support and guidance for immigrants and refugees settling in the Gatineau region.</p>
            
            <div style="margin-top: 24px;">
              <h4>Support services:</h4>
              <ul style="margin-left: 24px;">
                <li>Help with administrative procedures</li>
                <li>Basic French classes</li>
                <li>Community orientation</li>
                <li>Employment support</li>
              </ul>
              
              <p><strong>Languages spoken:</strong> French, English, Spanish, Arabic</p>
              <p><strong>Contact:</strong> (819) 555-0123</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="section section-alt">
      <div class="container">
        <div class="text-center" style="margin-bottom: 64px;">
          <h2>Missions and Evangelism</h2>
          <p>Sharing Christ's love locally and internationally</p>
        </div>
        
        <div class="grid grid-3">
          <div class="card">
            <h3>Local Missions</h3>
            <p>Evangelism and service in the Outaouais region.</p>
            <ul style="margin-left: 24px;">
              <li>Hospital visits</li>
              <li>Prison ministry</li>
              <li>Street evangelism</li>
              <li>Partnerships with other churches</li>
            </ul>
          </div>
          
          <div class="card">
            <h3>International Missions</h3>
            <p>Financial and prayer support for missionaries worldwide.</p>
            <ul style="margin-left: 24px;">
              <li>Support for 5 missionary families</li>
              <li>Projects in Haiti and Senegal</li>
              <li>Annual mission trips</li>
              <li>Child sponsorship</li>
            </ul>
          </div>
          
          <div class="card">
            <h3>Missionary Training</h3>
            <p>Preparation and equipping for missionary service.</p>
            <ul style="margin-left: 24px;">
              <li>Mission school (6 months)</li>
              <li>Practical internships</li>
              <li>Cross-cultural training</li>
              <li>Personal mentoring</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <section class="section">
      <div class="container text-center">
        <h2>Join a Ministry</h2>
        <p>Discover how you can serve and grow in your faith</p>
        <div style="margin-top: 32px;">
          <a href="/en/contact" class="btn btn-primary">Contact Us</a>
          <a href="/en/events" class="btn btn-outline">View Events</a>
        </div>
      </div>
    </section>
  </main>

  <Footer lang="en" />
</Layout>

<style>
  main {
    padding-top: 80px;
  }

  .hero-small {
    background: linear-gradient(135deg, var(--primary-blue) 0%, var(--primary-blue-dark) 100%);
    color: white;
    padding: 120px 0 80px;
    text-align: center;
  }

  .hero-small h1 {
    color: white;
    font-size: 3rem;
    margin-bottom: 24px;
  }

  .hero-small p {
    font-size: 1.25rem;
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto;
  }

  .ministry-card h3 {
    color: var(--primary-blue);
    margin-bottom: 16px;
  }

  .ministry-details {
    margin-top: 24px;
  }

  .ministry-details h4 {
    color: var(--accent-gold);
    font-size: 1.125rem;
    margin-bottom: 12px;
  }

  .contact-info {
    margin-top: 24px;
    padding-top: 16px;
    border-top: 1px solid var(--neutral-200);
  }

  .contact-info p {
    margin-bottom: 8px;
    font-size: 0.875rem;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  ul {
    line-height: 1.8;
  }

  @media (max-width: 768px) {
    .hero-small {
      padding: 100px 0 60px;
    }

    .hero-small h1 {
      font-size: 2.5rem;
    }
  }
</style>