---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<Layout title="Events - Gatineau Church" lang="en">
  <Header lang="en" />
  
  <main>
    <section class="hero-small">
      <div class="container">
        <h1>Events</h1>
        <p>Discover our activities and community events</p>
      </div>
    </section>

    <section class="section">
      <div class="container">
        <div class="text-center" style="margin-bottom: 64px;">
          <h2>Upcoming Events</h2>
          <p>Join us for these special moments of fellowship and celebration</p>
        </div>
        
        <div class="grid grid-2">
          <div class="card event-card">
            <div class="event-date">
              <span class="month">DEC</span>
              <span class="day">24</span>
            </div>
            <div class="event-content">
              <h3>Christmas Eve Service</h3>
              <p class="event-time">7:00 PM - 8:30 PM</p>
              <p>Special celebration of Jesus' birth with Christmas carols, nativity reading, and family communion time.</p>
              <div class="event-details">
                <p><strong>Location:</strong> Main sanctuary</p>
                <p><strong>Age:</strong> All ages welcome</p>
                <p><strong>Registration:</strong> Recommended</p>
              </div>
            </div>
          </div>
          
          <div class="card event-card">
            <div class="event-date">
              <span class="month">JAN</span>
              <span class="day">15</span>
            </div>
            <div class="event-content">
              <h3>Community Dinner</h3>
              <p class="event-time">6:00 PM - 8:00 PM</p>
              <p>Free meal open to the entire community. A great opportunity to meet new people and share a good meal.</p>
              <div class="event-details">
                <p><strong>Location:</strong> Community hall</p>
                <p><strong>Cost:</strong> Free</p>
                <p><strong>Registration:</strong> Required by January 12</p>
              </div>
            </div>
          </div>
          
          <div class="card event-card">
            <div class="event-date">
              <span class="month">FEB</span>
              <span class="day">14</span>
            </div>
            <div class="event-content">
              <h3>Couples Night</h3>
              <p class="event-time">7:00 PM - 10:00 PM</p>
              <p>Special evening for couples with dinner, music, and activities to strengthen marital relationships.</p>
              <div class="event-details">
                <p><strong>Location:</strong> Reception hall</p>
                <p><strong>Cost:</strong> $40 per couple</p>
                <p><strong>Registration:</strong> By February 10</p>
              </div>
            </div>
          </div>
          
          <div class="card event-card">
            <div class="event-date">
              <span class="month">MAR</span>
              <span class="day">21</span>
            </div>
            <div class="event-content">
              <h3>Youth Conference</h3>
              <p class="event-time">9:00 AM - 4:00 PM</p>
              <p>Full day of workshops, worship, and teaching specially designed for youth aged 13-25.</p>
              <div class="event-details">
                <p><strong>Location:</strong> Community center</p>
                <p><strong>Age:</strong> 13-25 years</p>
                <p><strong>Cost:</strong> $25 (meal included)</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="section section-alt">
      <div class="container">
        <div class="text-center" style="margin-bottom: 64px;">
          <h2>Recurring Events</h2>
          <p>Regular activities you can participate in</p>
        </div>
        
        <div class="grid grid-3">
          <div class="card">
            <h3>Women's Prayer Group</h3>
            <p class="recurring-time">Every Tuesday at 10:00 AM</p>
            <p>Prayer and sharing time for women of all ages. Childcare available for children.</p>
            <div style="margin-top: 16px;">
              <p><strong>Contact:</strong> Marie Dubois<br>
              <strong>Phone:</strong> (819) 555-0145</p>
            </div>
          </div>
          
          <div class="card">
            <h3>Seniors Club</h3>
            <p class="recurring-time">Thursdays at 2:00 PM</p>
            <p>Social activities, games, lectures, and outings for our members 55 and older.</p>
            <div style="margin-top: 16px;">
              <p><strong>Contact:</strong> Robert Tremblay<br>
              <strong>Phone:</strong> (819) 555-0167</p>
            </div>
          </div>
          
          <div class="card">
            <h3>Young Adults Group</h3>
            <p class="recurring-time">Fridays at 7:30 PM</p>
            <p>Meetings for 18-35 year olds with Bible study, discussions, and social activities.</p>
            <div style="margin-top: 16px;">
              <p><strong>Contact:</strong> Sarah Leblanc<br>
              <strong>Phone:</strong> (819) 555-0189</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="section">
      <div class="container">
        <div class="text-center" style="margin-bottom: 64px;">
          <h2>Annual Events</h2>
          <p>Traditions and celebrations that mark our year</p>
        </div>
        
        <div class="grid grid-2">
          <div class="card">
            <img src="https://images.pexels.com/photos/6646918/pexels-photo-6646918.jpeg?auto=compress&cs=tinysrgb&w=800" alt="Christmas Concert" style="width: 100%; height: 200px; object-fit: cover; border-radius: 8px; margin-bottom: 24px;">
            <h3>Christmas Concert</h3>
            <p><strong>December</strong></p>
            <p>Annual concert featuring our choir and special guests. A beautiful musical event to celebrate the Christmas season with the entire community.</p>
          </div>
          
          <div class="card">
            <img src="https://images.pexels.com/photos/8468570/pexels-photo-8468570.jpeg?auto=compress&cs=tinysrgb&w=800" alt="Family Picnic" style="width: 100%; height: 200px; object-fit: cover; border-radius: 8px; margin-bottom: 24px;">
            <h3>Family Picnic</h3>
            <p><strong>July</strong></p>
            <p>Large family celebration at the park with games, children's activities, barbecue, and outdoor fellowship time. Open to the entire community.</p>
          </div>
          
          <div class="card">
            <img src="https://images.pexels.com/photos/8468570/pexels-photo-8468570.jpeg?auto=compress&cs=tinysrgb&w=800" alt="Fall Conference" style="width: 100%; height: 200px; object-fit: cover; border-radius: 8px; margin-bottom: 24px;">
            <h3>Fall Conference</h3>
            <p><strong>October</strong></p>
            <p>Conference weekend with guest speakers, workshops, and spiritual renewal time for the whole family.</p>
          </div>
          
          <div class="card">
            <img src="https://images.pexels.com/photos/6646918/pexels-photo-6646918.jpeg?auto=compress&cs=tinysrgb&w=800" alt="Garage Sale" style="width: 100%; height: 200px; object-fit: cover; border-radius: 8px; margin-bottom: 24px;">
            <h3>Garage Sale</h3>
            <p><strong>May</strong></p>
            <p>Large community sale to fund our missionary projects. Donations accepted and volunteers needed.</p>
          </div>
        </div>
      </div>
    </section>

    <section class="section section-alt">
      <div class="container">
        <div class="text-center" style="margin-bottom: 64px;">
          <h2>Camps and Retreats</h2>
          <p>Intensive spiritual experiences for all ages</p>
        </div>
        
        <div class="grid grid-2">
          <div class="card">
            <h3>Youth Summer Camp</h3>
            <p><strong>July 15-22, 2024</strong></p>
            <p>Week-long camp for 12-18 year olds at Camp Peniel in the Laurentians. Water activities, hiking, campfires, and spiritual teachings.</p>
            <div style="margin-top: 24px;">
              <p><strong>Cost:</strong> $350 per youth</p>
              <p><strong>Scholarships available</strong></p>
              <p><strong>Registration by June 1</strong></p>
            </div>
          </div>
          
          <div class="card">
            <h3>Couples Retreat</h3>
            <p><strong>September 20-22, 2024</strong></p>
            <p>Weekend retreat for married couples at a resort center. Marriage teachings, relaxation time, and couple activities.</p>
            <div style="margin-top: 24px;">
              <p><strong>Cost:</strong> $280 per couple</p>
              <p><strong>Childcare organized for children</strong></p>
              <p><strong>Limited spaces</strong></p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="section">
      <div class="container text-center">
        <h2>Registration and Information</h2>
        <p>To register for our events or get more information</p>
        <div style="margin-top: 32px;">
          <a href="/en/contact" class="btn btn-primary">Contact Us</a>
          <a href="tel:+18195550123" class="btn btn-outline">Call (819) 555-0123</a>
        </div>
      </div>
    </section>
  </main>

  <Footer lang="en" />
</Layout>

<style>
  main {
    padding-top: 80px;
  }

  .hero-small {
    background: linear-gradient(135deg, var(--primary-blue) 0%, var(--primary-blue-dark) 100%);
    color: white;
    padding: 120px 0 80px;
    text-align: center;
  }

  .hero-small h1 {
    color: white;
    font-size: 3rem;
    margin-bottom: 24px;
  }

  .hero-small p {
    font-size: 1.25rem;
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto;
  }

  .event-card {
    display: flex;
    gap: 24px;
    align-items: flex-start;
  }

  .event-date {
    background: var(--accent-gold);
    color: white;
    padding: 16px;
    border-radius: 12px;
    text-align: center;
    min-width: 80px;
    flex-shrink: 0;
  }

  .event-date .month {
    display: block;
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 4px;
  }

  .event-date .day {
    display: block;
    font-size: 2rem;
    font-weight: 700;
    line-height: 1;
  }

  .event-content h3 {
    color: var(--primary-blue);
    margin-bottom: 8px;
  }

  .event-time {
    color: var(--accent-gold);
    font-weight: 600;
    margin-bottom: 16px;
  }

  .event-details {
    margin-top: 16px;
    padding-top: 16px;
    border-top: 1px solid var(--neutral-200);
  }

  .event-details p {
    margin-bottom: 8px;
    font-size: 0.875rem;
  }

  .recurring-time {
    color: var(--accent-gold);
    font-weight: 600;
    font-size: 1.125rem;
    margin-bottom: 16px;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  @media (max-width: 768px) {
    .hero-small {
      padding: 100px 0 60px;
    }

    .hero-small h1 {
      font-size: 2.5rem;
    }

    .event-card {
      flex-direction: column;
      text-align: center;
    }

    .event-date {
      align-self: center;
    }
  }
</style>