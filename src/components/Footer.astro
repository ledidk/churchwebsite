---
const { lang = 'fr' } = Astro.props;

const translations = {
  fr: {
    churchName: 'Église de Gatineau',
    address: '123 Rue Principale, Gatineau, QC J8X 1A1',
    phone: 'Téléphone',
    email: 'Courriel',
    quickLinks: 'Liens Rapides',
    home: 'Accueil',
    about: 'À Propos',
    services: 'Services',
    events: 'Événements',
    contact: 'Contact',
    donate: 'Faire un Don',
    servicesTimes: 'Horaires des Services',
    sunday: 'Dimanche',
    morning: 'Service du Matin',
    evening: 'Service du Soir',
    wednesday: 'Mercredi',
    prayer: 'Réunion de Prière',
    followUs: 'Suivez-nous',
    rights: 'Tous droits réservés.',
    builtWith: 'Construit avec amour pour la communauté de Gatineau'
  },
  en: {
    churchName: 'Gatineau Church',
    address: '123 Main Street, Gatineau, QC J8X 1A1',
    phone: 'Phone',
    email: 'Email',
    quickLinks: 'Quick Links',
    home: 'Home',
    about: 'About',
    services: 'Services',
    events: 'Events',
    contact: 'Contact',
    donate: 'Donate',
    servicesTimes: 'Service Times',
    sunday: 'Sunday',
    morning: 'Morning Service',
    evening: 'Evening Service',
    wednesday: 'Wednesday',
    prayer: 'Prayer Meeting',
    followUs: 'Follow Us',
    rights: 'All rights reserved.',
    builtWith: 'Built with love for the Gatineau community'
  }
};

const t = translations[lang];
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <h3>{t.churchName}</h3>
        <p>{t.address}</p>
        <p>{t.phone}: (819) 555-0123</p>
        <p>{t.email}: info@eglisegatineau.ca</p>
      </div>

      <div class="footer-section">
        <h4>{t.quickLinks}</h4>
        <ul>
          <li><a href={lang === 'fr' ? '/' : '/en'}>{t.home}</a></li>
          <li><a href={lang === 'fr' ? '/about' : '/en/about'}>{t.about}</a></li>
          <li><a href={lang === 'fr' ? '/services' : '/en/services'}>{t.services}</a></li>
          <li><a href={lang === 'fr' ? '/events' : '/en/events'}>{t.events}</a></li>
          <li><a href={lang === 'fr' ? '/contact' : '/en/contact'}>{t.contact}</a></li>
          <li><a href={lang === 'fr' ? '/donate' : '/en/donate'}>{t.donate}</a></li>
        </ul>
      </div>

      <div class="footer-section">
        <h4>{t.servicesTimes}</h4>
        <ul>
          <li><strong>{t.sunday}</strong></li>
          <li>{t.morning}: 9h00 & 11h00</li>
          <li>{t.evening}: 18h00</li>
          <li><strong>{t.wednesday}</strong></li>
          <li>{t.prayer}: 19h00</li>
        </ul>
      </div>

      <div class="footer-section">
        <h4>{t.followUs}</h4>
        <div class="social-links">
