---
import { getSiteSettings } from '../lib/sanity/queries';
import { getLocalizedString } from '../lib/sanity/utils';
import type { LanguageCode } from '../lib/sanity/languages';
import type { NavLink, SocialLink } from '../lib/sanity/types';

const { lang = 'fr' } = Astro.props as { lang: LanguageCode };

// Fetch site settings from Sanity
const siteSettings = await getSiteSettings();

const churchName = siteSettings 
  ? getLocalizedString(siteSettings.churchName, lang)
  : (lang === 'fr' ? 'Le Centre Chrétien des Vainqueurs' : 'Winners Christian Center');

const footerText = siteSettings?.footerText
  ? getLocalizedString(siteSettings.footerText, lang)
  : (lang === 'fr' ? 'Construit avec amour pour la communauté de Gatineau' : 'Built with love for the Gatineau community');

const address = siteSettings?.contactInfo?.address
  ? getLocalizedString(siteSettings.contactInfo.address, lang)
  : (lang === 'fr' ? '4 Rue Georges Bilodeau, Gatineau QC J8Z 1V2' : '123 Main Street, Gatineau, QC J8X 1A14 Rue Georges Bilodeau, Gatineau QC J8Z 1V2');

const phone = siteSettings?.contactInfo?.phone || '(819) 555-0123';
const email = siteSettings?.contactInfo?.email || 'info@centrechretiendesvainqueurs.ca';

const navLinks: NavLink[] = siteSettings?.navLinks?.filter((link: NavLink) => link.enabled) || [];
const socialLinks: SocialLink[] = siteSettings?.socialLinks || [];

const quickLinksTitle = lang === 'fr' ? 'Liens Rapides' : 'Quick Links';
const servicesTimesTitle = lang === 'fr' ? 'Horaires des Services' : 'Service Times';
const followUsTitle = lang === 'fr' ? 'Suivez-nous' : 'Follow Us';
const phoneLabel = lang === 'fr' ? 'Téléphone' : 'Phone';
const emailLabel = lang === 'fr' ? 'Courriel' : 'Email';
const rightsText = lang === 'fr' ? 'Tous droits réservés.' : 'All rights reserved.';
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <h3>{churchName}</h3>
        <p>{address}</p>
        <p>{phoneLabel}: {phone}</p>
        <p>{emailLabel}: {email}</p>
      </div>

      <div class="footer-section">
        <h4>{quickLinksTitle}</h4>
        <ul>
          {navLinks.map((link: NavLink) => {
            const label = getLocalizedString(link.label, lang);
            const href = `/${lang}${link.href}`;
            return <li><a href={href}>{label}</a></li>;
          })}
        </ul>
      </div>

      <div class="footer-section">
        <h4>{servicesTimesTitle}</h4>
        <ul>
          <li><strong>{lang === 'fr' ? 'Dimanche' : 'Sunday'}</strong></li>
          <li>{lang === 'fr' ? 'Service du Matin' : 'Morning Service'}: 9h00 & 11h00</li>
          <li>{lang === 'fr' ? 'Service du Soir' : 'Evening Service'}: 18h00</li>
          <li><strong>{lang === 'fr' ? 'Mercredi' : 'Wednesday'}</strong></li>
          <li>{lang === 'fr' ? 'Réunion de Prière' : 'Prayer Meeting'}: 19h00</li>
        </ul>
      </div>

      <div class="footer-section">
        <h4>{followUsTitle}</h4>
        <div class="social-links">
          {socialLinks.length > 0 ? (
            socialLinks.map((social: SocialLink) => (
              <a href={social.url} aria-label={social.label} target="_blank" rel="noopener noreferrer">
                {social.icon === 'facebook' && (
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                )}
                {social.icon === 'instagram' && (
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-2.209-1.791-4-4-4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                )}
                {social.icon === 'youtube' && (
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                  </svg>
                )}
              </a>
            ))
          ) : (
            <!-- Default social links as fallback -->
            <a href="https://facebook.com" aria-label="Facebook" target="_blank" rel="noopener noreferrer">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
            <a href="https://instagram.com" aria-label="Instagram" target="_blank" rel="noopener noreferrer">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-2.209-1.791-4-4-4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
            <a href="https://youtube.com" aria-label="YouTube" target="_blank" rel="noopener noreferrer">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
            </a>
          )}
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <p>&copy; 2024 {churchName}. {rightsText}</p>
      <p>{footerText}</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--neutral-800);
    color: var(--neutral-200);
    padding: 64px 0 32px;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 48px;
    margin-bottom: 48px;
  }

  .footer-section h3,
  .footer-section h4 {
    color: white;
    margin-bottom: 24px;
  }

  .footer-section h3 {
    color: var(--accent-gold);
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
  }

  .footer-section ul li {
    margin-bottom: 8px;
  }

  .footer-section a {
    color: var(--neutral-200);
    transition: color 0.2s ease;
  }

  .footer-section a:hover {
    color: var(--accent-gold);
  }

  .social-links {
    display: flex;
    gap: 16px;
  }

  .social-links a {
    width: 40px;
    height: 40px;
    background: var(--neutral-700);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .social-links a:hover {
    background: var(--accent-gold);
    transform: translateY(-2px);
  }

  .footer-bottom {
    border-top: 1px solid var(--neutral-700);
    padding-top: 32px;
    text-align: center;
  }

  .footer-bottom p {
    margin-bottom: 8px;
    font-size: 0.875rem;
  }

  @media (max-width: 768px) {
    .footer {
      padding: 48px 0 24px;
    }

    .footer-content {
      gap: 32px;
      margin-bottom: 32px;
    }

    .footer-section {
      text-align: center;
    }

    .social-links {
      justify-content: center;
    }
  }
</style>