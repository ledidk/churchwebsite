---
import { getLocalizedText } from '../../lib/sanity/utils';
import type { LanguageCode } from '../../lib/sanity/languages';

interface Props {
  section: any;
  lang: LanguageCode;
}

const { section, lang } = Astro.props;

const content = section.content ? getLocalizedText(section.content, lang) : null;
---

{content && (
  <section class="section">
    <div class="container">
      <div class="rich-text" set:html={content} />
    </div>
  </section>
)}

<style>
  .rich-text {
    max-width: 800px;
    margin: 0 auto;
  }

  .rich-text :global(h1),
  .rich-text :global(h2),
  .rich-text :global(h3),
  .rich-text :global(h4) {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .rich-text :global(p) {
    margin-bottom: 1.5rem;
    line-height: 1.8;
  }

  .rich-text :global(ul),
  .rich-text :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .rich-text :global(li) {
    margin-bottom: 0.5rem;
  }

  .rich-text :global(a) {
    color: var(--primary-blue);
    text-decoration: underline;
  }

  .rich-text :global(a:hover) {
    color: var(--primary-blue-light);
  }

  .rich-text :global(blockquote) {
    border-left: 4px solid var(--accent-gold);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--neutral-600);
  }

  .rich-text :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 2rem 0;
  }
</style>
