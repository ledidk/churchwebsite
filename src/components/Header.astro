---
import { getSiteSettings } from '../lib/sanity/queries';
import { getLocalizedString, buildImageUrl } from '../lib/sanity/utils';
import { switchLanguage, getAlternateLanguage } from '../lib/routing';
import type { LanguageCode } from '../lib/sanity/languages';

const { lang = 'fr' } = Astro.props as { lang: LanguageCode };

// Fetch site settings from Sanity
const siteSettings = await getSiteSettings();

const churchName = siteSettings 
  ? getLocalizedString(siteSettings.churchName, lang)
  : (lang === 'fr' ? 'Ã‰glise de Gatineau' : 'Gatineau Church');

const navLinks = siteSettings?.navLinks?.filter(link => link.enabled) || [];

// Get logo URL if available
const logoUrl = siteSettings?.logo ? buildImageUrl(siteSettings.logo).width(200).url() : null;

// Get alternate language for switcher
const alternateLang = getAlternateLanguage(lang);
const currentPath = Astro.url.pathname;
const alternatePath = switchLanguage(currentPath, alternateLang);
---

<header class="header">
  <div class="container">
    <nav class="nav">
      <div class="nav-brand">
        <a href={`/${lang}`}>
          {logoUrl ? (
            <img src={logoUrl} alt={churchName} class="logo" />
          ) : (
            <h2>{churchName}</h2>
          )}
        </a>
      </div>
      
      <ul class="nav-menu" id="nav-menu">
        {navLinks.map((link) => {
          const label = getLocalizedString(link.label, lang);
          const href = `/${lang}${link.href}`;
          const isDonate = link.href === '/donate';
          
          return (
            <li>
              <a 
                href={href} 
                class={isDonate ? 'btn btn-secondary' : ''}
              >
                {label}
              </a>
            </li>
          );
        })}
      </ul>

      <div class="nav-actions">
        <div class="language-switch">
          <a href={alternatePath} class="lang-btn">
            {alternateLang.toUpperCase()}
          </a>
        </div>
        <button class="nav-toggle" id="nav-toggle" aria-label="Toggle menu">
          <span></span>
          <span></span>
          <span></span>
        </button>
      </div>
    </nav>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    z-index: 1000;
    border-bottom: 1px solid var(--neutral-200);
    transition: all 0.3s ease;
  }

  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16px 0;
  }

  .nav-brand h2 {
    color: var(--primary-blue);
    font-size: 1.5rem;
    margin: 0;
  }

  .nav-brand .logo {
    height: 50px;
    width: auto;
    object-fit: contain;
  }

  .nav-menu {
    display: flex;
    list-style: none;
    gap: 32px;
    align-items: center;
  }

  .nav-menu a {
    font-weight: 500;
    color: var(--neutral-700);
    transition: color 0.2s ease;
  }

  .nav-menu a:hover {
    color: var(--primary-blue);
  }

  .nav-actions {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .lang-btn {
    padding: 8px 16px;
    background: var(--neutral-100);
    border-radius: 6px;
    font-weight: 500;
    color: var(--neutral-700);
    transition: all 0.2s ease;
  }

  .lang-btn:hover {
    background: var(--primary-blue);
    color: white;
  }

  .nav-toggle {
    display: none;
    flex-direction: column;
    background: none;
    border: none;
    cursor: pointer;
    padding: 4px;
  }

  .nav-toggle span {
    width: 25px;
    height: 3px;
    background: var(--neutral-700);
    margin: 3px 0;
    transition: 0.3s;
  }

  @media (max-width: 768px) {
    .nav-menu {
      position: fixed;
      top: 100%;
      left: 0;
      right: 0;
      background: white;
      flex-direction: column;
      padding: 32px 0;
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
      transform: translateY(-100%);
      opacity: 0;
      visibility: hidden;
      transition: all 0.3s ease;
    }

    .nav-menu.active {
      transform: translateY(0);
      opacity: 1;
      visibility: visible;
    }

    .nav-toggle {
      display: flex;
    }

    .nav-brand h2 {
      font-size: 1.25rem;
    }

    .nav-brand .logo {
      height: 40px;
    }
  }
</style>

<script>
  const navToggle = document.getElementById('nav-toggle');
  const navMenu = document.getElementById('nav-menu');

  navToggle?.addEventListener('click', () => {
    navMenu?.classList.toggle('active');
  });

  // Close menu when clicking outside
  document.addEventListener('click', (e) => {
    if (!navToggle?.contains(e.target) && !navMenu?.contains(e.target)) {
      navMenu?.classList.remove('active');
    }
  });
</script>